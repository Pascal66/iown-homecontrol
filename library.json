{
  "$schema": "https://raw.githubusercontent.com/platformio/platformio-core/develop/platformio/assets/schema/library.json",
  "name": "iown-homecontrol",
  "version": "0.6.9",
  "description": "io-homecontrol lib",
  "keywords": "io-homecontrol, somfy, velux, LoRa32, iown, iohome",
  "homepage": "https://velocet.github.io/iown-homecontrol",
  "license": "CC-BY-SA-4.0",
  "platforms": "espressif32",
  "repository": {
    "type": "git",
    "url": "https://github.com/velocet/iown-homecontrol"
  },
  "authors": [
    {
      "name": "Velocet",
      "email": "git@mail.velocet.de",
      "url": "https://velocet.github.io/",
      "maintainer": true
    }
  ],
  "dependencies":[
    {
      "name": "RadioLib",
      "version": "https://github.com/jgromes/RadioLib"
    }
  ],
  "frameworks": ["espidf","arduino"],
  "build":
  {
      "libLDFMode": "chain+"
  },
  "examples": [
    {
      "name": "1W Remote",
      "base": "examples/oneway",
      "files": [
        "platformio.ini",
        "include/iown-homecontrol.h",
        "examples/oneway/oneway.c",
        "README"
      ]
    },
    {
      "name": "2W Remote",
      "base": "examples/twoway",
      "files": [
        "platformio.ini",
        "include/iown-homecontrol.h",
        "examples/twoway/twoway.c",
        "README"
      ]
    },
    {
      "name": "Gateway",
      "base": "examples/gateway",
      "files": [
        "platformio.ini",
        "include/iown-homecontrol.h",
        "examples/gateway.c",
        "README"
      ]
    }
  ]
}
