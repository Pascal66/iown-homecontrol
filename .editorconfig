# https://editorconfig.org

# This is the Top-Most EditorConfig File
root=true

# Sane Defaults...
[*]
charset=utf-8
end_of_line=lf
indent_size=2
indent_style=space
insert_final_newline=true
max_line_length=off
tab_width=2
trim_trailing_whitespace=true

[{Makefile,*.mk,.gitattributes,.gitignore,.gitmodules}]
indent_style=tab
