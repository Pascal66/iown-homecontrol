# https://EditorConfig.org

# This is the Top-Most EditorConfig File
root=true

# Sane Defaults...
[*]
charset=utf-8
end_of_line=lf
indent_size=2
tab_width=2
indent_style=space
insert_final_newline=true
# Characters before line wrap
max_line_length=off
trim_trailing_whitespace=true

# fu<k this stupid python formatting bs
[*.py]
indent_style=space
indent_size=4

[{Makefile,.gitmodules}]
indent_size=4
indent_style=tab

[Dockerfile]
indent_size=4
