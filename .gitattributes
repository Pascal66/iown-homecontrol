*.sh       text eol=lf
*.zsh      text eol=lf
# Declare files that have CRLF line endings on checkout.
# These are explicitly windows files and should use crlf
*.ps1      text eol=lf
*.bat      text eol=crlf
*.cmd      text eol=crlf
*.bat      text eol=crlf
*.sln      text eol=crlf

# Serialization
*.json     text
